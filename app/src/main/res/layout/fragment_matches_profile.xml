<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    android:orientation="vertical">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_margin="@dimen/smallMargin"
        android:id="@+id/profileFeedCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:orientation="horizontal">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_margin="@dimen/extraSmallMargin"
            android:layout_width="@dimen/matchAvatarSize"
            android:layout_height="@dimen/matchAvatarSize"
            android:src="@mipmap/ic_banner" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_margin="@dimen/smallMargin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:layout_margin="@dimen/smallMargin"
            android:id="@+id/profileMatchesTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="Ivan Ivanov, 20 y.o."
            android:textSize="@dimen/title" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/profileMatchesContacts"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/smallMargin"
            android:layout_weight="2"
            android:gravity="start"
            android:text="(for contacts)"
            android:textSize="@dimen/contentText" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/profileMatchesInterests"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/smallMargin"
                android:layout_weight="2"
                android:gravity="start"
                android:text="e.g. \nIT, \nMusic"
                android:textSize="@dimen/contentText" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/cardMatchUID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="defaultUID"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>